# LLM Configuration - OpenRouter with Llama 3 (Free)
SCRAPER_LLM_PROVIDER=openrouter
SCRAPER_LLM_MODEL=meta-llama/llama-3.1-8b-instruct:free
SCRAPER_LLM_API_KEY=your_openrouter_api_key_here

# Alternative: Anthropic Claude
# SCRAPER_LLM_PROVIDER=anthropic
# SCRAPER_LLM_MODEL=claude-3-5-sonnet-latest
# SCRAPER_LLM_API_KEY=your_anthropic_api_key_here

# Google Cloud Storage Configuration
SCRAPER_GCS_CREDENTIALS_PATH=/home/ubuntu/scraper/credentials/scraper-credentials.json
SCRAPER_GCS_BUCKET_NAME=your-project-id-scraper-images

# Scraping Configuration
SCRAPER_BROWSER_HEADLESS=true
SCRAPER_SCRAPING_DELAY_SECONDS=3.0
SCRAPER_MAX_RETRIES=3
SCRAPER_QUALITY_THRESHOLD=0.7

# File System Configuration
SCRAPER_OUTPUT_DIRECTORY=./output
SCRAPER_STATE_DIRECTORY=./state
SCRAPER_CONFIG_DIRECTORY=./config/sites

# Logging Configuration
SCRAPER_LOG_LEVEL=INFO
SCRAPER_LOG_FILE=scraper.log

# Development Configuration
SCRAPER_DEBUG_MODE=false
SCRAPER_TEST_MODE=false